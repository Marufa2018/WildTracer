<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dip" />
            <stroke android:width="1dip" android:color="#ED427C" />
            <gradient android:angle="-90" android:startColor="#ED155F" android:endColor="@color/colorEmergency"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="1dip" android:color="#ED427C" />
            <solid android:color="#ED155F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="1dip" android:color="#ED427C" />
            <gradient android:angle="-90" android:startColor="#ED155F" android:endColor="@color/colorEmergency" />
        </shape>
    </item>
</selector>